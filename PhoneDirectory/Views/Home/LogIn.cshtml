
@{
    ViewBag.Title = "Admin Girişi";
    Layout = "~/Views/Shared/main_Layout.cshtml";

}

<div class="loginContainer" >
    <img src="~/Images/login_icon.png" />
    <form action="/Home/logIn" method="post" class="form-horizontal">
        <div class="form-group gp">
            <label>Kullanıcıadı </label>
            <input type="text" class="form-control" id="username" name="username" placeholder="Kullanıcıadı">

        </div>
        <div class="form-group gp" >
           <label >Şifre</label>
           <input type="password" class="form-control" id="password" name="password" placeholder="Şifre">
            
        </div>
       
        <div class="form-group">
           <button type="submit" class="btn btn-default">GİRİŞ</button>
        </div>
    </form>
</div>

