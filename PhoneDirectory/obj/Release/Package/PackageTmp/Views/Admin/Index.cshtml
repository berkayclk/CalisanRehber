@model IEnumerable<PhoneDirectory.Models.Employee>

@{
    ViewBag.Title = "Çalışan Listesi";
    Layout = "~/Views/Shared/adminPage_Layout.cshtml";
}

<p>
    <button class="btn btn-primary adminButton">@Html.ActionLink("Çalışan Ekle", "addEmployee", "Admin") </button>
</p>
<table class="table">
    <tr class="headerContainer">
        <th class="TableHeader">
            Ad
        </th>
        <th class="TableHeader">
            Soyad
        </th>
        <th class="TableHeader">
            Telefon Numarası
        </th>
        <th class="TableHeader">
            Departman
        </th>
        <th class="TableHeader">
            Şehir
        </th>
        <th class="TableHeader">
            Yöneticisi
        </th>
       
        <th class="TableHeader"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="itemsContainer">
            <td class="itemsCell">
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td class="itemsCell">
                @Html.DisplayFor(modelItem => item.surname)
            </td>
            <td class="itemsCell">
                @Html.DisplayFor(modelItem => item.phoneNumber)
            </td>
            <td class="itemsCell">
                @Html.DisplayFor(modelItem => item.Department.name)
            </td>
            <td class="itemsCell">
                @Html.DisplayFor(modelItem => item.Department.location)
            </td>
            <td class="itemsCell">
                @Html.DisplayFor(modelItem => item.Employee2.name) @Html.DisplayFor(modelItem => item.Employee2.surname)
            </td>
            <td class="DeatilsCell">
                @Html.ActionLink("DÜZENLE", "editEmployee", new { id = item.ID }) |
                @Html.ActionLink("SİL", "deleteEmployee", new { id = item.ID })

            </td>
        </tr>
    }

</table>

